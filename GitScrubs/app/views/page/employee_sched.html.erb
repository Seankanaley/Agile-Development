
<h1>Employee Schedule to View Shifts and Requests for Shift Changes</h1>
<p id="notice"><%= notice %></p>


  <table cellspacing="40px">
    <thead>
    <tr>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Location</th>
      <th>Employee ID</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @employees.each do |employee| %>
      <% if (employee.employeeID == current_user.try(:id))%>
    <tr>
      <td><%= employee.start_time %></td>
      <td><%= employee.end_time %></td>
      <td><%= employee.location %></td>
      <td><%= employee.employeeID %></td>
      <td><%= employee.confirmed %></td>
      <td><%= link_to 'Confirm', edit_shift_path(employee) %></td>
      <!--<td><%= link_to 'Deny', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      <td><%= link_to 'Deny', deny_popup_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %></td>

    </tr>
    <% end %>
    <% end %>



    </tbody>
  </table>

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>



